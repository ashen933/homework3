import copy
class CyclicIterator:
    def __init__(self, c):
        self.c = list(c)

        self.copy = copy.deepcopy(self.c)
    def __iter__(self):
        return  self

    def __next__(self):
        if self.copy == []:
            self.copy = copy.deepcopy(self.c)
        i = self.copy[0]
        del self.copy[0]
        return i



cyclic_iterator = CyclicIterator(range(3))
for i in cyclic_iterator:
    print(i)
